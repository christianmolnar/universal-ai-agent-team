@tailwind base;
@tailwind components;
@tailwind utilities;

/**
 * Universal AI Agent Team Platform - Dark Theme Design System
 * Based on proven My-AI-Agent-Team color scheme
 */

/* ====================================================================
   COLOR VARIABLES
   ==================================================================== */
:root {
  /* Dark Theme Colors */
  --background: #1a1a1a;
  --background-secondary: #2d2d2d;
  --background-tertiary: #3a3a3a;
  --foreground: #ffffff;
  --foreground-secondary: #e5e5e5;
  --foreground-muted: #a0a0a0;
  
  /* Golden/Orange Accents */
  --accent-primary: #ffb347;
  --accent-secondary: #ff9500;
  --accent-tertiary: #ffd700;
  
  /* Status Colors */
  --success: #10b981;
  --warning: #f59e0b;
  --error: #ef4444;
  --info: #3b82f6;
  
  /* Border Colors */
  --border: #404040;
  --border-light: #525252;
}

/* ====================================================================
   RESET & BASE STYLES
   ==================================================================== */

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html,
body {
  max-width: 100vw;
  overflow-x: hidden;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
  background: var(--background);
  color: var(--foreground);
  line-height: 1.6;
}
  line-height: 1.6;
}

body {
  background: #f8f9fa;
  color: #2c3e50;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* ====================================================================
   LAYOUT CONTAINERS
   ==================================================================== */

.app-container {
  min-height: 100vh;
  background: #f8f9fa;
}

.main-header {
  background: white;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  border-bottom: 1px solid #e9ecef;
  padding: 20px 0;
}

.header-content {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.app-title {
  font-size: 2.2rem;
  color: #2c3e50;
  font-weight: 700;
  margin: 0;
}

.app-subtitle {
  color: #7f8c8d;
  font-size: 1.1rem;
  margin: 5px 0 0 0;
}

.quality-display {
  text-align: right;
}

.quality-label {
  font-size: 0.9rem;
  color: #7f8c8d;
  margin: 0;
}

.quality-score {
  font-size: 1.8rem;
  font-weight: 700;
  color: #27ae60;
  margin: 0;
}

/* ====================================================================
   MAIN CONTENT
   ==================================================================== */

.main-content {
  max-width: 1200px;
  margin: 0 auto;
  padding: 40px 20px;
}

/* ====================================================================
   HERO SECTION
   ==================================================================== */

.hero-section {
  background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
  color: white;
  padding: 40px;
  border-radius: 12px;
  margin-bottom: 40px;
  text-align: center;
}

.hero-title {
  font-size: 2.5rem;
  font-weight: 700;
  margin-bottom: 15px;
}

.hero-description {
  font-size: 1.2rem;
  opacity: 0.9;
  margin-bottom: 30px;
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
}

.status-indicators {
  display: flex;
  justify-content: center;
  gap: 30px;
  flex-wrap: wrap;
}

.status-item {
  display: flex;
  align-items: center;
  gap: 10px;
}

.status-dot {
  width: 12px;
  height: 12px;
  border-radius: 50%;
}

.status-green { background: #27ae60; }
.status-yellow { background: #f39c12; }
.status-purple { background: #9b59b6; }

.status-text {
  font-weight: 500;
}

/* ====================================================================
   DOMAIN CARDS
   ==================================================================== */

.content-grid {
  display: grid;
  grid-template-columns: 2fr 1fr;
  gap: 40px;
}

@media (max-width: 768px) {
  .content-grid {
    grid-template-columns: 1fr;
  }
}

.section-title {
  font-size: 1.8rem;
  color: #2c3e50;
  font-weight: 600;
  margin-bottom: 25px;
}

.domain-grid {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.domain-card {
  background: white;
  border-radius: 12px;
  padding: 25px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  border: 2px solid transparent;
  cursor: pointer;
  transition: all 0.3s ease;
}

.domain-card:hover {
  border-color: #3498db;
  box-shadow: 0 4px 16px rgba(52, 152, 219, 0.15);
  transform: translateY(-2px);
}

.domain-card.active {
  border-color: #3498db;
  background: #ebf5ff;
  box-shadow: 0 4px 16px rgba(52, 152, 219, 0.25);
}

.domain-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 15px;
}

.domain-info h4 {
  font-size: 1.4rem;
  color: #2c3e50;
  font-weight: 600;
  margin-bottom: 8px;
}

.domain-description {
  color: #7f8c8d;
  font-size: 1rem;
  margin-bottom: 15px;
}

.domain-meta {
  display: flex;
  align-items: center;
  gap: 15px;
  flex-wrap: wrap;
}

.status-badge {
  padding: 6px 12px;
  border-radius: 20px;
  font-size: 0.8rem;
  font-weight: 600;
  text-transform: uppercase;
}

.status-active {
  background: #d4edda;
  color: #155724;
}

.status-coming-soon {
  background: #f8d7da;
  color: #721c24;
}

.analyses-count {
  color: #7f8c8d;
  font-size: 0.9rem;
}

.domain-score {
  text-align: right;
}

.score-value {
  font-size: 2rem;
  font-weight: 700;
  color: #27ae60;
  margin: 0;
}

.score-label {
  font-size: 0.9rem;
  color: #7f8c8d;
  margin: 0;
}

/* ====================================================================
   ANALYSIS HISTORY
   ==================================================================== */

.history-section {
  background: white;
  border-radius: 12px;
  padding: 25px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.analysis-list {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.analysis-item {
  padding: 20px;
  border: 1px solid #e9ecef;
  border-radius: 8px;
  transition: all 0.2s ease;
}

.analysis-item:hover {
  border-color: #3498db;
  box-shadow: 0 2px 8px rgba(52, 152, 219, 0.1);
}

.analysis-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 10px;
}

.analysis-title {
  font-size: 1.1rem;
  font-weight: 600;
  color: #2c3e50;
  margin: 0;
}

.analysis-domain {
  font-size: 0.9rem;
  color: #7f8c8d;
  margin: 2px 0 0 0;
}

.analysis-date {
  font-size: 0.8rem;
  color: #95a5a6;
  margin: 2px 0 0 0;
}

.analysis-score-display {
  text-align: right;
}

.analysis-score {
  font-size: 1.4rem;
  font-weight: 700;
  color: #27ae60;
  margin: 0;
}

.score-suffix {
  font-size: 0.9rem;
  color: #7f8c8d;
  margin: 0;
}

.analysis-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.analysis-status {
  padding: 4px 10px;
  border-radius: 15px;
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
}

.status-purchased {
  background: #d4edda;
  color: #155724;
}

.status-passed {
  background: #f8d7da;
  color: #721c24;
}

.analysis-price {
  font-weight: 600;
  color: #2c3e50;
  font-size: 1rem;
}

/* ====================================================================
   ACTION BUTTONS
   ==================================================================== */

.action-section {
  margin-top: 20px;
  padding-top: 20px;
  border-top: 1px solid #e9ecef;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.action-label {
  font-weight: 600;
  color: #2c3e50;
}

.btn-primary {
  background: #3498db;
  color: white;
  padding: 12px 24px;
  border: none;
  border-radius: 8px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
  text-decoration: none;
  display: inline-block;
}

.btn-primary:hover {
  background: #2980b9;
  transform: translateY(-1px);
  box-shadow: 0 4px 8px rgba(52, 152, 219, 0.3);
}

/* ====================================================================
   RESPONSIVE DESIGN
   ==================================================================== */

@media (max-width: 768px) {
  .header-content {
    flex-direction: column;
    text-align: center;
    gap: 15px;
  }
  
  .hero-title {
    font-size: 2rem;
  }
  
  .status-indicators {
    gap: 20px;
  }
  
  .domain-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 10px;
  }
  
  .analysis-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 5px;
  }
  
  .action-section {
    flex-direction: column;
    gap: 10px;
  }
}

/* ====================================================================
   REAL ESTATE ANALYZER
   ==================================================================== */

.analyzer-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 40px 20px;
}

.analyzer-header {
  text-align: center;
  margin-bottom: 40px;
}

.analyzer-subtitle {
  color: #7f8c8d;
  font-size: 1.1rem;
  margin-top: 10px;
}

.analyzer-content {
  display: grid;
  grid-template-columns: 1fr;
  gap: 40px;
}

/* Analysis Form */
.analysis-form {
  background: white;
  border-radius: 12px;
  padding: 30px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.form-section {
  margin-bottom: 30px;
}

.form-section-title {
  font-size: 1.3rem;
  color: #2c3e50;
  font-weight: 600;
  margin-bottom: 20px;
  padding-bottom: 10px;
  border-bottom: 2px solid #3498db;
}

.form-row {
  display: grid;
  grid-template-columns: 1fr;
  gap: 20px;
  margin-bottom: 20px;
}

@media (min-width: 768px) {
  .form-row {
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  }
}

.form-group {
  display: flex;
  flex-direction: column;
}

.form-group label {
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 8px;
  font-size: 0.9rem;
}

.form-input {
  padding: 12px 16px;
  border: 2px solid #e9ecef;
  border-radius: 8px;
  font-size: 1rem;
  transition: border-color 0.2s ease;
  background: white;
}

.form-input:focus {
  outline: none;
  border-color: #3498db;
  box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.1);
}

.form-input::placeholder {
  color: #95a5a6;
}

.form-actions {
  margin-top: 30px;
  padding-top: 20px;
  border-top: 1px solid #e9ecef;
  text-align: center;
}

.analyzer-btn {
  padding: 16px 40px;
  font-size: 1.1rem;
  min-width: 200px;
}

.analyzer-btn:disabled {
  background: #95a5a6;
  cursor: not-allowed;
  transform: none;
  box-shadow: none;
}

/* Analysis Results */
.analysis-results {
  margin-top: 40px;
}

.error-message {
  background: #f8d7da;
  color: #721c24;
  padding: 20px;
  border-radius: 8px;
  border: 1px solid #f5c6cb;
}

.error-message h3 {
  margin-bottom: 10px;
  color: #721c24;
}

.result-display {
  background: white;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  overflow: hidden;
}

.result-header {
  background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
  color: white;
  padding: 30px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 20px;
}

.result-score {
  display: flex;
  align-items: baseline;
  gap: 8px;
}

.result-score .score-value {
  font-size: 3rem;
  font-weight: 700;
}

.result-score .score-label {
  font-size: 1.2rem;
  opacity: 0.9;
}

.result-recommendation {
  text-align: right;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.recommendation {
  font-size: 1.5rem;
  font-weight: 700;
  padding: 8px 16px;
  border-radius: 8px;
  text-transform: uppercase;
}

.recommendation.proceed {
  background: #27ae60;
  color: white;
}

.recommendation.caution {
  background: #f39c12;
  color: white;
}

.recommendation.reject {
  background: #e74c3c;
  color: white;
}

.confidence {
  font-size: 0.9rem;
  opacity: 0.9;
}

.result-summary {
  padding: 30px;
  border-bottom: 1px solid #e9ecef;
}

.result-summary h3 {
  color: #2c3e50;
  font-size: 1.4rem;
  margin-bottom: 15px;
}

.summary-text {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
  line-height: 1.6;
  color: #2c3e50;
  white-space: pre-wrap;
  background: #f8f9fa;
  padding: 20px;
  border-radius: 8px;
  border-left: 4px solid #3498db;
}

.result-sections {
  padding: 30px;
}

.result-section {
  margin-bottom: 30px;
}

.result-section h4 {
  color: #2c3e50;
  font-size: 1.2rem;
  font-weight: 600;
  margin-bottom: 15px;
  padding-bottom: 8px;
  border-bottom: 2px solid #3498db;
}

.metrics-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 15px;
}

.metric-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 16px;
  background: #f8f9fa;
  border-radius: 8px;
  border: 1px solid #e9ecef;
}

.metric-label {
  font-weight: 600;
  color: #2c3e50;
}

.metric-value {
  font-weight: 700;
  color: #27ae60;
  font-size: 1.1rem;
}

.findings-list,
.risks-list,
.opportunities-list {
  list-style: none;
  padding: 0;
}

.findings-list li,
.risks-list li,
.opportunities-list li {
  padding: 12px 16px;
  margin-bottom: 8px;
  border-radius: 8px;
  border-left: 4px solid;
}

.findings-list li {
  background: #e8f5e8;
  border-left-color: #27ae60;
  color: #1e6b1e;
}

.risks-list li {
  background: #fceaea;
  border-left-color: #e74c3c;
  color: #a91e2c;
}

.opportunities-list li {
  background: #e6f3ff;
  border-left-color: #3498db;
  color: #2873a3;
}

.analysis-footer {
  padding: 20px 30px;
  background: #f8f9fa;
  border-top: 1px solid #e9ecef;
  text-align: center;
}

.analysis-date {
  color: #7f8c8d;
  font-size: 0.9rem;
}

/* Typography */
.text-2xl { font-size: 1.5rem; line-height: 2rem; }
.text-3xl { font-size: 1.875rem; line-height: 2.25rem; }
.text-xl { font-size: 1.25rem; line-height: 1.75rem; }
.text-lg { font-size: 1.125rem; line-height: 1.75rem; }
.text-sm { font-size: 0.875rem; line-height: 1.25rem; }
.text-xs { font-size: 0.75rem; line-height: 1rem; }
.font-bold { font-weight: 700; }
.font-semibold { font-weight: 600; }
.font-medium { font-weight: 500; }

/* Colors */
.text-gray-900 { color: #111827; }
.text-gray-600 { color: #4b5563; }
.text-gray-500 { color: #6b7280; }
.text-white { color: white; }
.text-green-600 { color: #059669; }
.text-blue-100 { color: #dbeafe; }
.text-green-800 { color: #166534; }

/* Background Colors */
.bg-gradient-to-r { background-image: linear-gradient(to right, var(--tw-gradient-stops)); }
.from-blue-600 { --tw-gradient-from: #2563eb; --tw-gradient-stops: var(--tw-gradient-from), var(--tw-gradient-to, rgba(37, 99, 235, 0)); }
.to-purple-600 { --tw-gradient-to: #9333ea; }
.bg-green-100 { background-color: #dcfce7; }
.bg-gray-100 { background-color: #f3f4f6; }

/* Borders and Shapes */
.rounded-2xl { border-radius: 1rem; }
.rounded-lg { border-radius: 0.5rem; }
.rounded-full { border-radius: 9999px; }

/* Interactions */
.cursor-pointer { cursor: pointer; }
.transition-all { transition-property: all; transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1); transition-duration: 150ms; }
.hover\\:shadow-md:hover { box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06); }
.hover\\:bg-blue-700:hover { background-color: #1d4ed8; }
.hover\\:shadow-md:hover { box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1); }

/* Buttons */
.bg-blue-600 { background-color: #2563eb; }
.transition-colors { transition-property: color, background-color, border-color, text-decoration-color, fill, stroke; }

/* Ring */
.ring-2 { box-shadow: var(--tw-ring-inset) 0 0 0 calc(2px + var(--tw-ring-offset-width)) var(--tw-ring-color); }
.ring-blue-200 { --tw-ring-color: #c3ddfd; }

/* Utilities */
.w-3 { width: 0.75rem; }
.h-3 { height: 0.75rem; }

/* Badge styles */
.badge {
  display: inline-flex;
  align-items: center;
  padding: 0.25rem 0.5rem;
  font-size: 0.75rem;
  font-weight: 500;
  border-radius: 9999px;
}

.badge-green {
  background-color: #dcfce7;
  color: #166534;
}

.badge-gray {
  background-color: #f3f4f6;
  color: #4b5563;
}

/* Button styles */
.btn {
  display: inline-flex;
  align-items: center;
  padding: 0.5rem 1rem;
  font-weight: 500;
  border-radius: 0.5rem;
  border: none;
  cursor: pointer;
  transition: background-color 0.2s;
}

.btn-primary {
  background-color: #2563eb;
  color: white;
}

.btn-primary:hover {
  background-color: #1d4ed8;
}

/* Card styles */
.card {
  background-color: white;
  border-radius: 0.5rem;
  border: 1px solid #e5e7eb;
  box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
}

.card-hover {
  transition: all 0.2s;
}

.card-hover:hover {
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
}

.card-selected {
  border-color: #3b82f6;
  box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.2);
}

/* Gradient background */
.hero-gradient {
  background: linear-gradient(135deg, #2563eb 0%, #9333ea 100%);
  color: white;
}

/* Responsive */
@media (min-width: 1024px) {
  .lg\\:grid-cols-3 { grid-template-columns: repeat(3, minmax(0, 1fr)); }
  .lg\\:col-span-2 { grid-column: span 2 / span 2; }
}

/* Status indicators */
.status-dot {
  width: 0.75rem;
  height: 0.75rem;
  border-radius: 50%;
  display: inline-block;
}

.status-green { background-color: #22c55e; }
.status-yellow { background-color: #eab308; }
.status-purple { background-color: #a855f7; }
